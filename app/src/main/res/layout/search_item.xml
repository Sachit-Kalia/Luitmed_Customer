<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    app:contentPadding="5dp"
    android:paddingHorizontal="8dp"
    android:paddingVertical="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:id="@+id/srCard"
            android:elevation="0dp"
            app:cardElevation="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp">

            <ImageView
                android:id="@+id/srImage"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/splash_image" />


        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/srCard"
            android:layout_toRightOf="@+id/srCard"
            android:paddingHorizontal="12dp">

            <TextView
                android:id="@+id/srName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gopal Confectionaries"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="14sp"
                android:textColor="#1E1E1E"
                />


            <TextView
                android:id="@+id/srAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paltan Bazaar, Shop No. 102"
                android:textSize="13sp"
                android:fontFamily="@font/open_sans"
                android:paddingTop="2dp"
                android:paddingBottom="6dp" />



        </LinearLayout>

    </RelativeLayout>


</LinearLayout>