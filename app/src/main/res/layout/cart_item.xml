<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:orientation="horizontal"
    android:background="@drawable/bottom_border"
    android:layout_marginBottom="6dp">

        <ImageView
            android:background="@color/white"
            android:id="@+id/ciImage"
            android:layout_width="140dp"
            android:layout_height="130dp"
            android:src="@drawable/splash_image"
            android:padding="25dp"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ciTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product title add to cart"
                android:fontFamily="@font/open_sans"
                android:padding="8dp"
                android:textSize="15sp"
                android:textColor="#3C3C3C"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ciPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹284.00"
                    android:textColor="#423D3D"
                    android:textStyle="bold"
                    android:textSize="16sp" />



            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="3dp"
                android:text="1 Kg"
                android:id="@+id/ciQuantity"
                android:textColor="#3C3C3C"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <ImageButton
                    android:id="@+id/cartItemMinus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/cartItemNumber"
                    android:src="@drawable/remove_circle"
                    android:tint="@color/main"
                    android:background="@null"/>



                <TextView
                    android:id="@+id/cartItemNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:layout_marginHorizontal="24dp"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textColor="#2196F3"/>

                <ImageButton
                    android:id="@+id/cartItemPlus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/cartItemNumber"
                    android:src="@drawable/add_circle"
                    android:tint="@color/main"
                    android:background="@null"/>


            </RelativeLayout>




        </LinearLayout>

</LinearLayout>