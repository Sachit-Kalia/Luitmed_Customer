<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetails"
    android:orientation="vertical">

    <include layout="@layout/toolbar1"/>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/odShimmer"
        android:visibility="visible">

        <include layout="@layout/order_details_shimmer"/>

    </com.facebook.shimmer.ShimmerFrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/odLayout"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="Order ID:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/detailID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="160868569758"
                android:textSize="19sp"
                android:fontFamily="@font/secular_one"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:background="@drawable/all_shadow_box">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cost"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/detailCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="$250"
                    android:textColor="#454444"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/detailStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IN PROGRESS"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/add_to_cart_btn"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Date"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/detailDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09/05/2021"
                    android:fontFamily="@font/open_sans"
                    android:textColor="#454444"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"/>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delivery Address"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="18dp"
                    android:paddingVertical="5dp" />

                <TextView
                    android:id="@+id/detailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="15dp"
                    android:text="T-043 Brahmaputra Hostel IIT Guwahati"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>


            </LinearLayout>




        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:background="@drawable/add_to_cart_btn"
            android:text="Request Cancellation"
            android:textColor="@color/white"
            android:fontFamily="@font/open_sans_bold"
            android:layout_marginVertical="10dp"
            android:id="@+id/cancelOrder"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingHorizontal="24dp"
                android:text="Items"
                android:fontFamily="@font/open_sans"
                android:textSize="16dp"/>


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                tools:listitem="@layout/order_detail_layout"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:id="@+id/orderItemRV"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>