<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/all_shadow_box"
    android:layout_marginBottom="15dp"
    android:padding="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_weight="75">

        <TextView
            android:id="@+id/aName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sachit Kalia"
            android:textSize="16sp"
            android:textColor="#151515"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/aAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="Brahmaputra Hostel A Block Room no. T043"
            android:textSize="15sp"
            android:textColor="#151515"
            />

        <TextView
            android:id="@+id/aPinCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="781039"
            android:textSize="15sp"
            android:textColor="#151515"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="Assam, India"
            android:textSize="15sp"
            android:textColor="#151515"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/open_sans"
                android:id="@+id/apn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone number: "
                android:textSize="15sp"
                android:textColor="#151515"
                />

            <TextView
                android:layout_toRightOf="@+id/apn"
                android:id="@+id/aPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8278838079"
                android:fontFamily="@font/open_sans"
                android:textSize="15sp"
                android:textColor="#151515"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp">

<!--            <androidx.appcompat.widget.AppCompatButton-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="40dp"-->
<!--                android:text="Edit"-->
<!--                android:id="@+id/editAddress"-->
<!--                android:layout_weight="50"-->
<!--                android:layout_marginRight="20dp"-->
<!--                android:textColor="@color/white"-->
<!--                android:background="@drawable/add_to_cart_btn"/>-->

            <androidx.appcompat.widget.AppCompatButton
                android:paddingHorizontal="40dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Remove"
                android:id="@+id/removeAddress"
                android:layout_weight="50"
                android:textColor="@color/white"
                android:background="@drawable/add_to_cart_btn"/>

        </RelativeLayout>

    </LinearLayout>


    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioCheck"
        android:layout_weight="25"
        android:gravity="center"
        android:layout_marginRight="10dp"/>

</LinearLayout>